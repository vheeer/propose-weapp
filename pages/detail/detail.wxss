	position: relative;
	float: left;
	width: 10%;
	top:5px;
	left:8px;
}
/*评论头像*/
.avatar {

}
/*评论内容*/
.comment_box {
	position: relative;
	background-color: #fff;
	margin:3px 0 0 0;
	padding:3px;
}
.comment_box:after {
	content: ".";
	display: block;
	width: 0;
	height: 0;
	clear: both;
	overflow: hidden;
}
.comment_right {
	float:left;
	width:80%;
	margin:27px 0 0 0;
	font-size:11px;
}
.comment {
	padding:0 0 0 11px;
}
.comment view {
	padding:0 0 5px 0;
}
.comment_nickname {
	position:absolute;
