/*主体开始*/
.body {

}
/*地图*/
.map {
	position: relative;
	height: 150px;
	padding: 3px 6px;
	margin-top: 3px;
	background-color: #fff;
}
/*距离*/
.distance {
	padding: 4px 0px 2px 10px;
	font-size: 12px;
  margin-top:70px;
}
/*表白内容*/
.content {
	position: relative;
	padding: 15px 15px;
	background-color: #fff;
	font-size: 14px;
	text-indent: 2em;
}
/*评论部分开始*/
.comments_box {
	position: relative;
	padding: 3px 0px;
}
/*点赞*/
.up_box {
	background-color: #fff;
margin:0 0 3px 0;

}
.up_box:after {
	content: ".";
	display: block;
	width: 0;
	height: 0;
	clear: both;
	overflow: hidden;
}
/*小花*/
.flower {
	float: left;
	padding: 10px;
}
.flower image {
	height: 15px;
	width: 15px;
}
.chat image {
	height: 13px;
	width: 13px;
}
/*赞头像*/
.ups {

}
.up_avatar {
	float: left;
	width:30px;
	height:30px;
	border-radius:200px;
	overflow:hidden;
	z-index:10;
margin:10px 5px 0 0;
 
}
.up_avatar image {
	width: 30px;
	height: 30px;
}
/*评论*/
.comments {
	
}
.comment_box .up_avatar {
margin:0px;
top:2px;
position:relative;

}
/*会话icon*/
